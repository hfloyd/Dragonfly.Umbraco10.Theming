@using Dragonfly.UmbracoTheming
@inject ThemeHelperService ThemeHelper

@inherits Umbraco.Cms.Web.Common.Macros.PartialViewMacroPage
@*
    Expected Parameters:
    -------------------
    Title (string)

    Example Usage:
    --------------
    @Umbraco.RenderMacro("BlogPosts_Latest", new {
            Title="Social Media"
            })
*@

@{
    var thisModel = Umbraco.AssignedContentItem;
    var thisTheme =  ThemeHelper.GetSiteThemeName(thisModel);
	var vdd = new ViewDataDictionary(ViewData);
    vdd.Add("MacroParams", Model.MacroParameters);
}

@Html.ThemedPartial(ThemeHelper, thisTheme, "Macro_BlogPosts_Latest", thisModel, vdd)